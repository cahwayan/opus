<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/monokaiBlack</item>
        <item name="colorPrimaryDark">@color/monokaiBlack</item>
        <item name="colorAccent">@color/monokaiPink</item>
        <item name="android:background">@color/monokaiBlack</item>
    </style>

    <style name="appToolbar">

        <item name="android:textSize">17sp</item>
        <item name="android:background">@color/monokaiBlack</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:elevation">0dp</item>
        <item name="titleTextAppearance">@style/appToolbar</item>

        <item name="titleTextColor">#fff</item>

    </style>

    <style name="moduleIndicatorTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/monokaiYellow</item>
        <item name="android:textSize">@dimen/moduleIndicatorTitle</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="titleModule">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/monokaiBlue</item>
        <item name="android:textSize">@dimen/titleModule</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="progressBarModule">
        <item name="cpb_progressbar_color">@color/monokaiGreen</item>
        <item name="cpb_background_progressbar_color">#a6ffffff</item>
        <item name="cpb_progressbar_width">6dp</item>
        <item name="cpb_background_progressbar_width">2dp</item>
    </style>

    <style name="smallWhiteText">
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="buttonEnterModule">

        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@color/monokaiPink</item>
        <item name="android:padding">8dp</item>

    </style>

    <style name="bottomBarTitle">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="titleStage">
        <item name="android:textColor">@color/monokaiBlue</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="stageNumber">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/monokaiGreen</item>
    </style>

    <style name="descriptionStage">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/monokaiYellow</item>

    </style>

    <style name="stageState">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/monokaiPurple</item>
    </style>


</resources>
